#!/usr/bin/env bash
#
# Download latest nnn release and extract it


version=$(curl -sL https://api.github.com/repos/jarun/nnn/releases/latest \
  | grep '"tag_name":' \
  | sed -E 's/.*"([^"]+)".*/\1/')
url=https://github.com/jarun/nnn/releases/download/"${version}"/nnn-"${version}".tar.gz

cd "$HOME"/bld/nnn
curl -sL "${url}" | tar zx
