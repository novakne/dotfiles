#!/usr/bin/env bash
#
# Quickly open some sites in firefox
#
# USAGE: oweb <url>
#
# REQUIREMENTS: firefox
# OPTIONALS:

# Help
_usage()
{
	cat <<-END
	SITES:
	  deepl - lhp - lhpp - river - shrt
	  zdoc  - zstd
	END
}

oweb()
{
	local url

	case "$1" in
		deepl) url='https://www.deepl.com/translator' ;;
		lhp) url='https://git.sr.ht/~leon_plickat/' ;;
		lhpp) url='https://sr.ht/~leon_plickat/' ;;
		river) url='https://github.com/ifreund/river' ;;
		srht) url='https://git.sr.ht/' ;;
		zdoc) url='https://ziglang.org/documentation/0.8.0/' ;;
		zstd) url='https://ziglang.org/documentation/0.8.0/std/#std' ;;
		*)
			_usage
			exit 1
			;;
	esac

	"${BROWSER:-firefox}" "${url}" >/dev/null 2>&1
}

oweb "$@"
