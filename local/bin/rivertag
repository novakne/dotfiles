#!/usr/bin/env bash

rto_opts=(
  --border-width 2
  --tag-amount 9
  --square-size 40
  --square-inner-padding 5
  --square-padding 5
  --square-border-width 0
  --background-colour 0x202325
  --border-colour 0x3a4043
  --square-active-background-colour 0x2e3f9f
  --square-active-border-colour 0x2e3f9f
  --square-active-occupied-colour 0xdce1e4
  --square-inactive-background-colour 0x646e73
  --square-inactive-border-colour 0xcdd4d8
  --square-inactive-occupied-colour 0xdce1e4
  --anchors "0:0:1:0"
  --margins "0:0:10:0"
)

river-tag-overlay "${rto_opts[@]}"

