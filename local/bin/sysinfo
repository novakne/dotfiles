#!/usr/bin/env bash
#
# Display some system informations
#
# USAGE: sysinfo
#
# REQUIREMENTS:
# OPTIONALS:

sysinfo()
{
	local bat_status bat_percent clock volume mute volume_percent fmt

	bat_status=$(cat /sys/class/power_supply/BAT1/status)
	bat_percent=$(cat /sys/class/power_supply/BAT1/capacity)
	clock=$(date +"%H:%M")
	day=$(date +"%A %d %B")
	mute=$(pamixer --get-mute)
	volume_percent=$(pamixer --get-volume)

	case $mute in
		true) volume=" Mute" ;;
		*) volume=" ${volume_percent}%" ;;
	esac

	fmt=$(printf -- '%s\n%s\n%s\n%s\n' " ${clock}" " ${day}" "  ${bat_status} ${bat_percent}%" "${volume}")
	notify-send "${fmt}"
}

sysinfo "$@"
