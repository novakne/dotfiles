#! /usr/bin/env bash
#
# Better git log
# Source: ( https://github.com/lewis6991/dotfiles/blob/master/bin/git-lg )


declare length hash_length width width2

length=$(git rev-parse --short HEAD)
hash_length=${#length}
width=$(($(tput cols) - 10))
width2="$((54 - hash_length))"

git log \
    --graph \
    --format="%w(${width},,${width2})%C(bold yellow)%h %C(bold blue)%<(18,trunc)%an %C(bold green)%<(14)%cd %C(auto)%d %Creset%s" \
    "$@"

