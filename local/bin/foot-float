#!/usr/bin/env bash
#
# Open a floating foot window in river
# USAGE: foot-float


foot-float() {
  local -a foot_opts
  foot_opts=(
    --app-id "footfloat"
    --window-size-pixels 1200x800
  )

  riverctl float-filter-add "footfloat"
  footclient "${foot_opts[@]}" >/dev/null 2>&1
}

foot-float "$@"

