#!/usr/bin/env bash
#
# Write STDERR to a file
#
# USAGE: logwrite <command>
# REQUIREMENTS:

logwrite()
{
	local log_file log_date log_cmd

	log_cmd="$1"
	log_date=$(date +"%Y_%m_%dT%H_%M_%S")
	log_file=$(mktemp -t "${log_cmd}"-"${log_date}".XXXXXXXXXX.log)

	"$@" >"${log_file}" 2>&1
}

logwrite "$@"
