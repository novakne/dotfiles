#!/usr/bin/env bash
#
# Get a list of executable in .local/bin
#
# USAGE: bin-list | fzf
# REQUIREMENTS: fd

bin-list() {
  local -a fd_opts

  fd_opts=(
    . "$HOME"/.local/bin
    --no-ignore
    --ignore-case
    --type symlink
    --type executable
    --exclude colors
    --exec printf '%s\n' "{/}"
  )

   fd "${fd_opts[@]}" 2>/dev/null | sort -u
}

bin-list "$@"

