#!/usr/bin/env bash
#
# Get service status
#
# USAGE: svs <options>

svs() {
  local id
  id=$(id -u)
  case "$1" in
    -u) sv status /tmp/"$id"-sv-"${WAYLAND_DISPLAY}"/* ;;
    -s) sudo sv status /var/service/* ;;
    *)
      printf -- '%s\n' "usage: -u user -s system"
      exit 1
    ;;
  esac
}

svs "$@"

