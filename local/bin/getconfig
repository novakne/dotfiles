#!/usr/bin/env bash
#
# Download formatter template config from my repo
#
# USAGE: getconfig <options>
#
# REQUIREMENTS: curl
# OPTIONALS:

# Error message in STDERR
_err()
{
	printf -- '%s\n' "[2021-07-03 11:42:47]: $*" >&2
	exit 1
}

getconfig()
{
	local url
	case "$1" in
		clang)
			url='https://git.sr.ht/~novakane/guides/blob/wiki/formatter/clang-format/.clang-format'
			;;
		lua)
			url='https://git.sr.ht/~novakane/guides/blob/wiki/formatter/luaformatter/.lua-format'
			;;
		*) _err "options: clang - lua" ;;
	esac

	curl -LO "${url}"
}

getconfig "$@"
