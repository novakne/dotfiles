#!/usr/bin/env bash
#
# Open notes directory in neovim or open _TODO/_QUICK note file
#
# USAGE: note [options]
#
# REQUIREMENTS:
# OPTIONALS: exa

note()
{
	local dir_notes
	dir_notes="$HOME"/media/notes

	case "$1" in
		l | list)
			clear
			exa -lah --group-directories-first --git --icons -- "${dir_notes}"
			;;
		q | quick)
			"${EDITOR:-nvim}" -- "${dir_notes}"/_QUICK.md
			;;
		s | save)
			cd "${dir_notes}" || return
			git commit -a -m"update"
			git push
			;;
		t | todo)
			"${EDITOR:-nvim}" -- "${dir_notes}"/_TODO.md
			;;
		*)
			cd "${dir_notes}" || return
			"${EDITOR:-nvim}" -c ":Files"
			;;
	esac
}

note "$@"
