#!/usr/bin/env bash
#
# Download latest neovim nightly release
#   move it to $PATH


# Download latest Neovim nightly build
curl -LO https://github.com/neovim/neovim/releases/download/nightly/nvim.appimage

# Move file to $HOME/.local/bin and rename it 'nv'
mv nvim.appimage "$HOME"/.local/bin/app/nv

# Make it executable
chmod 774 "$HOME"/.local/bin/app/nv
