#!/usr/bin/env bash
#
# Set outer and view padding
#
# USAGE: river-gaps <outer_padding> <view_padding>
# REQUIREMENTS: river rivertile


river-gaps() {
  if hash riverctl >/dev/null 2>&1; then
    if [[ "$#" -ne 2 ]]; then
      printf -- '%s\n' "Need two arguments: <outer> <view>" >&2
      exit 1
    else
      riverctl set-option -focused-output outer_padding $1
      riverctl set-option -focused-output view_padding $2
    fi
  else
    printf -- '%s\n' "Riverctl not found" >&2
    exit 1
  fi
}

river-gaps "$@"

