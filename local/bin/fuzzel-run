#!/usr/bin/env bash
#
# Launch fuzzel
#
# USAGE: fuzzel-run
# REQUIREMENTS: fuzzel

fuzzel-run() {
  local -a fuzzel_opts

  fuzzel_opts=(
    --no-icons
    --font 'Overpass'
    --terminal 'footclient'
    --background 'f1f1f0ff'
    --selection-color 'fde7f6ff'
    --text-color '252524ff'
    --match-color '656d78ff'
    --border-color '252524ff'
    -x 10 -y 5 -r 4 -l 5
  )

  fuzzel "${fuzzel_opts[@]}" <&0
}

fuzzel-run "$@"

