#!/usr/bin/env bash
#
# Launch fuzzel
#
# USAGE: fuzzel-run
# REQUIREMENTS: fuzzel

fuzzel-run() {
  local -a fuzzel_opts

  fuzzel_opts=(
    --no-icons
    --font 'Overpass'
    --terminal 'footclient'
    --background 'f9f9faff'
    --selection-color 'dbf1fdff'
    --text-color '202325ff'
    --match-color 'b3408aff'
    --border-color '202325ff'
    -x 10 -y 5 -r 4 -l 5
  )

  fuzzel "${fuzzel_opts[@]}" <&0
}

fuzzel-run "$@"

