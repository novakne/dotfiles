#!/usr/bin/env bash
#
# Open an exit menu with confirmation in dmenu-wl


declare -a dmenu_opts
dmenu_opts=(-i -h 28 -fn Overpass -nb '#38383c' -nf '#d2ccd6' -sb '#e8ec77' -sf '#232227')

confirm() {
    printf -- '%s\n%s\n' "Yes" "No" \
      | dmenu-wl "${dmenu_opts[@]}" -p "${1:-Confirm:}"
}

quit=" Quit awesome"
shutdown=" Shutdown"
reboot=" Reboot"
suspend=" Suspend"
hibernate=" Hibernate"

options="${quit}\n${shutdown}\n${reboot}\n${suspend}\n${hibernate}"
selection=$(echo -e "${options}" | dmenu-wl "${dmenu_opts[@]}" -p 'Exit: ')

case ${selection} in
    ("$quit") awesome quit ;;
    ("$shutdown") [[ $(confirm "$@") = 1 ]] && (systemctl poweroff) ;;
    ("$reboot") [[ $(confirm "$@") = 1 ]] && (systemctl reboot) ;;
    ("$suspend") [[ $(confirm "$@") = 1 ]] && (systemctl suspend) ;;
    ("$hibernate") [[ $(confirm "$@") = 1 ]] && (systemctl hibernate) ;;
esac

