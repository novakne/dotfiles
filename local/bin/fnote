#!/usr/bin/env bash
#
# Search for header in markdown files
#     - Requirements: ripgrep fzf nvim


declare file line notes_dir
notes_dir="$XDG_DATA_HOME"/notes

read -r file line <<<"$(rg --color=always --no-heading --line-number --smart-case --only-matching '^\#+\s.*$' "${notes_dir}"  2>/dev/null \
    | fzf -0 -1 --query="$1" \
    | awk -F: '{print $1, $2}')"

[[ -n "${file}" ]] && "${EDITOR:-nvim}" "${file}" +"${line}"

unset -v file line
