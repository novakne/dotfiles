#!/usr/bin/env bash
#
# Search ctags
#     - Requirements: fzf ctags


ft() {
  local line

  [ -e tags ] &&
  line=$(
    awk 'BEGIN { FS="\t" } !/^!/ {print toupper($4)"\t"$1"\t"$2"\t"$3}' tags \
      | cut -c1-80 \
      | fzf --nth=1,2
  ) && ${EDITOR:-nvim} "$(cut -f3 <<< "$line")" -c "set nocst" \
                                      -c "silent tag $(cut -f2 <<< "$line")"
}

