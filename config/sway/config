# [ Status Bar ]
# Read `man 5 sway-bar` for more information about this section.
# bar swaybar_command waybar
bar {
    # status_command i3status-rs
    font pango: Overpass 12
    # gaps 0 50 0 50
    height 22
    # hidden_state hide
    # mode hide
    # modifier Mod1
    position top
    # separator_symbol
    # status_edge_padding 30
    status_padding 0
    strip_workspace_numbers yes
    tray {
        tray_padding 2
        icon_theme Arc
    }
    colors {
        separator #59566d
        background #23222b
        statusline #eae9ee
        focused_workspace #e8ec77 #e8ec77 #23222b
        active_workspace #23222b #23222b #eae9ee
        inactive_workspace #23222b #23222b #eae9ee
        urgent_workspace #f63d81 #f63d81 #23222b
    }
}

# [ Colors ]
set $border #59566d
set $bg #59566d
set $txt #eae9ee
set $focused #e8ec77
set $inactive #a9a7b9
set $unfocused #474557
set $urgent #f63d81

# class 	            border  background  text  indicator  child_border
client.focused 	        $border $bg         $txt  $focused   $focused
client.focused_inactive $border $bg         $txt  $inactive  $inactive
client.unfocused        $border $bg         $txt  $unfocused $unfocused
client.urgent           $border $bg         $txt  $urgent    $urgent


# [ VARIABLES ]
# Logo key. Use Mod1 for Alt.
set $mod Mod4
# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l
# Your preferred terminal emulator
set $term footclient
# Your preferred application launcher
# Note: pass the final command to swaymsg so that the resulting window can be opened
# on the original workspace that the command was run on.
set $menu fuzzel-run | xargs swaymsg exec --
set $menu-desktop dmenu-desktop | xargs swaymsg exec --


# [ OUTPUT ]
# You can get the names of your outputs by running: swaymsg -t get_outputs
set $wal_dir $HOME/img/wal
output eDP-1 {
    resolution 1920x1080
    position 0 0
    bg $wal_dir/tonton_revolver_john_wick_01.jpg fill
    # bg $wal_dir/red_hood_01.jpg fill
    # bg $wal_dir/wonder_woman_04.jpg fill
}


