#!/usr/bin/env zsh

# Open apps
# note: xdg-open has a bug with .desktop files, so we cant use that
#   - Dependencies: fzf

fapps () {
    local selected

    selected="$(ls /usr/share/applications | fzf -e)"
    nohup $(grep '^Exec' "/usr/share/applications/$selected" | tail -1 | sed 's/^Exec=//' | sed 's/%.//') >/dev/null 2>&1&
}
