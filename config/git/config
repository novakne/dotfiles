[color]
    ui = auto
[status]
    showUntrackedFiles = all
[alias]
    co = checkout
    ci = commit
    s = status
    br = branch
    sw = switch
    ps = push
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p
    qlog = log -5 --pretty --oneline
    wow = log --all --graph --decorate --oneline --simplify-by-decoration
    sbu = submodule update --remote --merge
[diff]
	submodule = log
    colorMoved = default
[core]
    editor = nvim
[include]
    path = config.user
[credential]
    helper = store
[pull]
	rebase = true
[init]
	defaultBranch = main
[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta
[delta]
    commit-decoration-style = blue ol
    ; commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue ol ul
    hunk-header-file-style = red
    hunk-header-line-number-style = "#6b2e9f"
    hunk-header-style = file line-number syntax
    light = true
    line-numbers = true
    minus-emph-style = normal "#d1bfcb"
    minus-empty-line-marker-style = normal "#e1cddb"
    minus-non-emph-style = normal "#e1cddb"
    minus-style = "normal #fde7f6"
    plus-emph-style = syntax "#91bda1"
    plus-empty-line-marker-style = normal "#aadfbd"
    plus-non-emph-style = syntax "#aadfbd"
    plus-style = syntax "#c0fbd5"
    side-by-side = false
    syntax-theme = argi
    zero-style = syntax
[interactive]
    diffFilter = delta --color-only
[commit]
	gpgsign = true
[gpg]
	program = gpg2
[sendemail]
    smtpserver = /usr/bin/msmtp
[fetch]
	prune = true
[submodule]
    recurse = true
