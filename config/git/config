[color]
    ui = auto
[status]
    showUntrackedFiles = all
[alias]
    co = checkout
    ci = commit
    s = status
    br = branch
    sw = switch
    ps = push
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    type = cat-file -t
    dump = cat-file -p
    qlog = log -5 --pretty --oneline
    wow = log --all --graph --decorate --oneline --simplify-by-decoration
    sbu = submodule update --remote --merge
[diff]
    tool = nvimdiff
	submodule = log
    colorMoved = default
[core]
    editor = nvim
    pager = delta
[include]
    path = config.user
[credential]
    helper = store
[pull]
	rebase = preserve
[init]
	defaultBranch = main
[delta]
    plus-color = "#1f8e7b"
    minus-color = "#ac2a5a"
    syntax-theme = kosmikoa
    line-numbers = true
    side-by-side = true
[interactive]
    diffFilter = delta --color-only
[commit]
	gpgsign = true
[sendemail]
    smtpserver = /usr/bin/msmtp
