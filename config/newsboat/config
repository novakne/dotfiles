#  [ NEWSBOAT ]

# Theme
include "~/.config/newsboat/kosmikoa"

# Options
articlelist-format "%4i %f %D   %?T?|%-17T|  ?%t"
auto-reload yes
delete-read-articles-on-quit yes
download-full-page yes
feed-sort-order firsttag
feedlist-format " %n %4i %10u - %t %> [%T]"
pager "less -g -i -M -R -S -w -z-4 %f"
reload-threads 50
show-read-articles no
show-read-feeds no
text-width 72

# Bind
bind-key k up
bind-key j down
bind-key h prev
bind-key l next
bind-key c cmdline

# Macros
# Open youtube in mpv
macro v set browser "setsid -f mpv" ; open-in-browser ; set browser firefox
# img in imv
macro i set browser "setsid -f imv"; open-in-browser; set browser firefox
